{
  "manifest_version": 2,
  "name": "HN Blacklist",
  "description": "Hide Hacker News submissions from sources you don't want to see",
  "author": "booleandilemma@gmail.com",
  "version": "1.2",
  "icons": {
    "32": "icons/icon32.png",
    "200": "icons/icon200.png"
  },
  "content_scripts": [
    {
      "matches": ["https://news.ycombinator.com/", "https://news.ycombinator.com/news*"],
      "js": ["index.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "options_ui": {
      "page": "options.html"
  }
}
